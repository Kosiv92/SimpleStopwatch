@model TimeViewModel

<div class="text-center">
        
    <h2 id="datetime"></h2>    
        <form asp-action="Index" method="post">
        <input asp-for=@Model.Milliseconds hidden id="sentTime" />
        <button id="start" type="button">Старт</button>
        <button id="stop" type="button" hidden>Стоп</button>
        <button id="reset" type="submit" hidden>Сброс</button>
        <h2 id="display">00:00:00</h2>
        </form>    
    @if(Model?.TimeToPrint != null)
    {
        <p><u>Время выполнения</u></p>
        <p>@Model.TimeToPrint</p>
    }

    
    
</div>
